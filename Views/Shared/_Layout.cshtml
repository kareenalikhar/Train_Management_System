<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Train_Management_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Train_Management_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div style="background-color:aquamarine" class="container-fluid">
                <a href="Train/Index"> <img src="~/images/logo.png" style="width:80px;height:80px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="padding-left:30px">
                   
                      <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="padding-left:inherit">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Train" asp-action="Index"><b>Train Master</b></a>
                        </li>
                        <li class="nav-item" style="padding-left:50px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Travel" asp-action="Index"><b>Travel Master</b></a>
                        </li>
                        <li class="nav-item" style="padding-left:50px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"><b>Reservation</b></a>
                        </li>
                        <li class="nav-item" style="padding-left:50px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"><b>Cancellation</b></a>
                        </li>
                        <li  class="nav-item" style="padding-left:475px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index"><b>Login/Signin</b></a>
                        </li>
                        </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Train_Management_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
